@model DistanceEducation.Models.AddOption

@{
    ViewData["Title"] = "Добавление варианта ответа";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Course" asp-action="AddOption">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(ViewBag.Question.QuestionTypeId == 1)
            {
            <div class="row align-items-center text-center">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="Text" class="form-control" type="text" />
                        <label asp-for="Text"></label>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>
                <input asp-for="Correct" type="hidden" value="true" />
            </div>
            }
            else
            {
                <div class="row align-items-center text-center">
                    <div class="col-10">
                        <div class="form-floating">
                            <input asp-for="Text" class="form-control" type="text" />
                            <label asp-for="Text"></label>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2 ">
                        <div class="form-floating">
                            Верный ответ:<input asp-for="Correct" type="radio" value="true" />
                            Неверный ответ:<input asp-for="Correct" type="radio" value="false" />
                            <span asp-validation-for="Correct" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            }
            <div class="form-floating">
                <input asp-for="QuestionId" class="form-control" type="hidden" value="@ViewBag.Question.Id" />
            </div>
            <button id="addSubmit" type="submit" class="w-25 btn btn-lg btn-primary mt-2">Добавить</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="EditQuestion" asp-route-questionId="@ViewBag.Question.Id">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
