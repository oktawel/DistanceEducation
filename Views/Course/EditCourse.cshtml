@model DistanceEducation.Models.Course

@{
    ViewData["Title"] = "Редактирование курса";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Course" asp-action="EditCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="hidden" />
            <div class="row align-items-center text-center">
                <div class="col-7">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" type="text" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <button class="btn btn-lg btn-primary"><a class="text-decoration-none text-light" asp-action="GroupCourse" asp-route-courseId="@Model.Id">Подключить группу</a></button>
                </div>
                <div class="col-6">
                    <div class="form-floating">
                        <textarea asp-for="Text" class="form-control" type="text"></textarea>
                        <label asp-for="Text"></label>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <h4>Список подключённых групп.</h4>
                    @Html.Partial("_ConnectedGroups", Model)
                </div>
                <br/>
            </div>
            <button id="addSubmit" type="submit" class="w-25 btn btn-lg btn-primary mt-2">Сохранить изменения</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Course" asp-route-ID="@Model.Id">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
