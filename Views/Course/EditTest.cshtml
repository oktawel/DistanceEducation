@model DistanceEducation.Models.AddTest

@{
    ViewData["Title"] = "Редактирование теста";
    //Model.CourseId = courseId;
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Course" asp-action="EditTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row align-items-center text-center">
                <input asp-for="Id" class="form-control" type="hidden" />
                <div class="col-4">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" type="text" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-floating">
                        <textarea asp-for="Description" class="form-control" type="text"></textarea>
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row align-items-center text-left">
                <div class="col-2 ">
                    <div class="form-floating">
                        <input asp-for="Length" class="form-control" type="number" min="1" />
                        <label asp-for="Length"></label>
                        <span asp-validation-for="Length" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4 ">
                    <div class="form-floating">
                        <div class=" row">
                            <div class="col-6">
                                <label asp-for="DateStart"></label>
                                <input type="date" asp-for="DateStart" class="form-control" />
                                <span asp-validation-for="DateStart" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="TimeStart"></label>
                                <input asp-for="TimeStart" class="form-control" type="time" />
                                <span asp-validation-for="TimeStart" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4 ">
                    <div class="form-floating">
                        <div class=" row">
                            <div class="col-6">
                                <label asp-for="DateEnd"></label>
                                <input asp-for="DateEnd" class="form-control" type="date" />
                                <span asp-validation-for="DateEnd" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="TimeEnd"></label>
                                <input asp-for="TimeEnd" class="form-control" type="time" />
                                <span asp-validation-for="TimeEnd" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="CourseId" class="form-control" type="hidden" value="@Model.CourseId"/>
            </div>
            <button id="addSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Сохранить изменения</button>
            <div id="List">
                <div>
                    <a class="text-decoration-none" asp-route-testId="@Model.Id" asp-action="addQuestion">Добавить вопрос</a>
                </div>
                @Html.Partial("_Questions")
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Course" asp-route-ID="@Model.CourseId">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
