@model DistanceEducation.Models.AddCourse

@{
    ViewData["Title"] = "Добавление курса";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Course" asp-action="AddCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row align-items-center text-center">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" type="text" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <textarea asp-for="Text" class="form-control" type="text"></textarea>
                        <label asp-for="Text"></label>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>
                <br/>
            </div>
            <button id="addSubmit" type="submit" class="w-25 btn btn-lg btn-primary mt-2">Создать курс</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
