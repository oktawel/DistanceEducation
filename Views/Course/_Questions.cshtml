
<table class="table">
    <thead>
        <tr>
            <th>
                Вопрос №
            </th>
            <th>
                Тип вопроса
            </th>
            <th>
                Стоимость вопроса
            </th>
            <th colspan="2">

            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in ViewBag.Questions)
        {
            <tr>
                <td>
                    Вопрос @i
                </td>
                <td>
                    @foreach (var t in ViewBag.Types)
                    {
                        if (t.Id == @item.QuestionTypeId)
                        {
                            @t.Name
                        }
                    }
                    
                </td>
                <td>
                    @item.Cost
                </td>
                <td>
                    <button>@Html.ActionLink("Изменить", "EditQuestion", new { questionId = item.Id })</button>
                    <button>@Html.ActionLink("Удалить", "DeleteStudent", new { id = item.Id })</button>
                </td>
            </tr>
            i += 1;
        }
    </tbody>
</table>
