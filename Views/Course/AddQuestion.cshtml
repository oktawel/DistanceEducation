@model DistanceEducation.Models.AddQuestion

@{
    ViewData["Title"] = "Добавление вопроса";
    int testId = ViewBag.Test.Id;
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-controller="Course" asp-action="AddQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row align-items-center text-center">
                <div class="col-10">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" type="text" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-2 ">
                    <div class="form-floating">
                        <input asp-for="Cost" class="form-control" type="number" min="1" />
                        <label asp-for="Cost"></label>
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-5 ">
                <div class="form-floating">
                    <select asp-for="QuestionTypeId" id="QuestionType">
                        <option value="null">Не назначен</option>
                        @foreach (var item in ViewBag.Types)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="QuestionTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating">
                
                <input asp-for="TestId" class="form-control" type="hidden" value="@testId" />
            </div>
            <button id="addSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Добавить вопрос</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="EditTest" asp-route-testId="@testId">Отмена</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
