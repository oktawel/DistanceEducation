@model DistanceEducation.Models.Acount.LoginViewModel

@{
    ViewData["Title"] = "Войти в аккаунт";
}

<div class="back">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="UserName" class="form-label"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Password" class="form-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

<div>
    <a class="text-decoration-none" asp-controller="Home" asp-action="Index">На главную</a>
</div>
