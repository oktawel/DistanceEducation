@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
                <a class="nav-link nav_button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Администратор</a>
        </li>
    }
    @if (User.IsInRole("Lecturer"))
    {
        <li class="nav-item">
                <a class="nav-link nav_button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Лектор </a>
        </li>
    }
    @if (User.IsInRole("Student"))
    {
        <li class="nav-item">
                <a class="nav-link nav_button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Студент </a>
        </li>

    }
    <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link ">Выйти</button>
            </form>         
    </li>
}
