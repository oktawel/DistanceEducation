@model IEnumerable<DistanceEducation.Models.Lecturer>

<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                Имя лектора
            </th>
            <th>
                Фамилия лектора
            </th>
            <th colspan="2">

            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Surname
                </td>
                <td>
                    <button>@Html.ActionLink("Подробная информация", "LecturerDetails", new { ID = item.Id })</button>
                    <button>@Html.ActionLink("Удалить", "DeleteLecturer", new { id = item.Id })</button>
                </td>
            </tr>
            i += 1;
        }
    </tbody>
</table>
