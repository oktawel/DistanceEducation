@model DistanceEducation.Models.User

@{
    ViewData["Title"] = "StudentDetails";
}

<h1>StudentDetails</h1>

<div>
    <h4>User</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <dl class="row">
            <dt class="col-sm-2 fild-details_name">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10 fild-details">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2 fild-details_name">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10 fild-details">
                <span class="fild">@Html.DisplayFor(model => model.UserName)</span>
                <input class="fildfill" asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2 fild-details_name">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10 fild-details">
                <span class="fild">@Html.DisplayFor(model => model.Email)</span>
                <input class="fildfill" asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2 fild-details_name">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10 fild-details">
                <span class="fild">@Html.DisplayFor(model => model.Name)</span>
                <input class="fildfill" asp-for="Name" class="form-control" autocomplete="name" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2 fild-details_name">
                @Html.DisplayNameFor(model => model.Surname)
            </dt>
            <dd class="col-sm-10 fild-details">
                <span class="fild">@Html.DisplayFor(model => model.Surname)</span>
                <input class="fildfill" asp-for="Surname" class="form-control" autocomplete="surname" aria-required="true" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </dd>
        </dl>
        <div>
            <button id="btn-edit">Изменить</button>         
            <input id="btn-save" type="submit" value="Сохранить" />
            <button><a asp-action="Students">Назад</a></button>
        </div>
    </form>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            $('#btn-edit').click(function () {
                $('#btn-edit').toggle();
                $('#btn-save').toggle();
                $('.fild').toggle();
                $('.fildfill').toggle();
            });
            $('#btn-save').click(function () {
                $('#btn-save').toggle();
                $('#btn-edit').toggle();
                $('.fild').toggle();
                $('.fildfill').toggle();

            });
        });
    </script>
}
